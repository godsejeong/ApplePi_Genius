<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="3.2"
    android:paddingTop="10dp"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/departmentText"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="이동할 부서을 선택해 주세요"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="20dp"
        android:orientation="vertical"
        >

    <Button
        android:id="@+id/insaBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/insa_btn"/>

    <Button
        android:id="@+id/ProductionBtn"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sales_btn"/>

    <Button
        android:id="@+id/salesBtn"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/production_btn"/>

    </LinearLayout>
</LinearLayout>