<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/departmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/production"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".activity.DepartmentActivity">

    <TextView
        android:id="@+id/departmenttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="#000000"
        android:textSize="41sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/departmentroundOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/departmentround_background"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="22sp"

            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/departmentroundTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/departmentround_background"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/departmentroundThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/departmentround_background"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/departmentroundFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/departmentround_background"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="91dp"
        android:orientation="vertical"
        android:paddingLeft="43.7dp"
        android:paddingRight="66.3dp"
        android:weightSum="3">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/departmentRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            tools:listitem="@layout/department_item">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>