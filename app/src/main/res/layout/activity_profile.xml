<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사원증"
            android:textColor="#4f4f4f"
            android:textSize="27sp"/>

        <LinearLayout
            android:id="@+id/profilePhoto"
            android:layout_width="133.7dp"
            android:layout_height="161dp"
            android:layout_marginTop="33dp"
            android:background="#8e8e8e"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/applepie"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진을 추가하세요"
                android:textColor="#494949"
                android:layout_marginTop="11dp"
                android:textSize="11sp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:textSize="15.3sp"
            android:gravity="center"
            android:layout_marginRight="62.7dp"
            android:layout_marginLeft="62.7dp"
            android:hint="이름을 입력하세요"
            />

    </LinearLayout>

    <Button
        android:id="@+id/profileNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="다음"
        android:textSize="25sp"
        android:textColor="#3b3b3b"
        android:background="@drawable/profilebtn_background"/>

</LinearLayout>